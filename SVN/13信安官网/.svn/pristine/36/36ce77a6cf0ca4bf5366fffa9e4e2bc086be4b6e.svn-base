*:link, *:visited, *:hover, *:active, *:focus {
-webkit-transition:
	color .25s linear,
	background-color .25s linear,
	border-color .25s linear;
transition:
	color .25s linear,
	background-color .25s linear,
	border-color .25s linear;
}
@media screen and (max-width:920px){
	.headline { font-size:0.85em; }
	.container { width:auto; }
	.navigation { height:auto; font-size:0.85em;}
	.navigation div a{ width:55%; padding-left:170px; margin:0;}
	.navigation form { display:inline-block;}
	.main{ margin:0 auto;}
	.note{ width:65%; height:auto; margin:0 auto; float:left; border-bottom:double red; padding-left:10px;}
	
}
	
	